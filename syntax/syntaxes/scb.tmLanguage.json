{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vscode-scb",
	"scopeName": "text.scb",
	"patterns": [
		{
			"include": "#content"
		}
	],
	"repository": {
		"content": {
			"patterns": [{
				"include": "#lines"
			}]
		},
		"lines": {
			"patterns": [
				{ "include": "#line" }
			]
		},
		"line": {
			"patterns": [
				{ "include": "#indent" }
				{ "include": "#line-body" }
			]
		},

		"indent": {
			"patterns": [
				{ "include": "#indent1" },
				{ "include": "#indent2" },
				{ "include": "#indent3" },
				{ "include": "#indent4" },
				{ "include": "#indent5" },
				{ "include": "#indent6" },
				{ "include": "#indent7" },
				{ "include": "#indent8" },
				{ "include": "#indent9over" }
			]
		},
		"indent1": {
			"patterns": [{
				"name": "indent.1.scb",
				"match": "^( )"
			}]
		},
		"indent2": {
			"patterns": [{
				"name": "indent.2.scb",
				"match": "^(  )"
			}]
		},
		"indent3": {
			"patterns": [{
				"name": "indent.3.scb",
				"match": "^(   )"
			}]
		},
		"indent4": {
			"patterns": [{
				"name": "indent.4.scb",
				"match": "^(    )"
			}]
		},
		"indent5": {
			"patterns": [{
				"name": "indent.5.scb",
				"match": "^(     )"
			}]
		},
		"indent6": {
			"patterns": [{
				"name": "indent.6.scb",
				"match": "^(      )"
			}]
		},
		"indent7": {
			"patterns": [{
				"name": "indent.7.scb",
				"match": "^(       )"
			}]
		},
		"indent8": {
			"patterns": [{
				"name": "indent.8.scb",
				"match": "^(        )"
			}]
		},
		"indent9over": {
			"patterns": [{
				"name": "indent.over9.scb",
				"match": "^( ){9,}"
			}]
		},

		"line-body": {
			"patterns": [
				{ "include": "#plain-parts" },
				{ "include": "#quote-parts" }
			]
		},

		"plain-parts": {
			"patterns": [
				{ "include": "#parts" }
			]
		},
		"quote-parts": {
			"begin": ">",
			"end": "$",
			"beginCaptures": {
				"0": { "name": "quote.line.start.scb" }
			},
			"endCaptures": {
				"0": { "name": "quote.line.end.scb" }
			},
			"name": "quote.line.scb",
			"patterns": [
				{ "include": "#parts" }
			]
		},

		"parts": {
			"patterns": [
				{ "include": "#part" }
			]
		},
		"part": {
			"patterns": [
				{ "include": "#link" },
				{ "include": "#literal" }
			]
		},
		"link": {
			"patterns": [{
				"name": "link.scb",
				"match": "\\[[^\\]]+\\]"
			}]
		},
		"literal": {
			"patterns": [{
				"name": "literal.scb",
				"match": "`[^`]+`"
			}]
		},

		"dummy": {}

	}		
}